iniciar-programa
	define-nueva-instruccion gira-derecha como inicio
    	repetir 3 veces inicio
        	gira-izquierda;
        fin;
    fin;
    inicia-ejecucion
    	mientras no-orientado-al-sur hacer inicio
        	gira-izquierda;
        fin;
        	si frente-libre entonces inicio
            	gira-derecha;
            fin;
            mientras frente-libre hacer inicio
            	avanza;
            fin;
        	mientras frente-bloqueado y izquierda-libre hacer inicio
            	gira-izquierda;
        	mientras frente-libre y derecha-bloqueada hacer inicio
            	avanza;
            fin;
            fin;
    	si derecha-libre entonces inicio
        	gira-derecha;
        fin;
        avanza;
        apagate;
    termina-ejecucion
finalizar-programa
